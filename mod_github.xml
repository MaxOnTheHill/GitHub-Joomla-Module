<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.6" client="site" method="upgrade">
	<name>mod_github</name>
	<creationDate>July 2011</creationDate>
	<author>Michael Babker</author>
	<copyright>(C) 2011 Michael Babker</copyright>
	<authorEmail>mbabker@flbab.com</authorEmail>
	<authorUrl>http://www.flbab.com</authorUrl>
	<version>1.0</version>
	<license>GNU/GPL</license>
	<description>MOD_GITHUB_XML_DESCRIPTION</description>
	<files>
		<folder>media</folder>
		<folder>tmpl</folder>
		<filename module="mod_github">mod_github.php</filename>
		<filename>CHANGELOG.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_github.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_github.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.mod_github.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="github">
				<field
					name="username"
					type="text"
					label="MOD_GITHUB_FIELDSET_GITHUB_USERNAME_LABEL"
					description="MOD_GITHUB_FIELDSET_GITHUB_USERNAME_DESCRIPTION"
					required="true" />
				<field
					name="repo"
					type="text"
					label="MOD_GITHUB_FIELDSET_GITHUB_REPO_LABEL"
					description="MOD_GITHUB_FIELDSET_GITHUB_REPO_DESCRIPTION" />
			</fieldset>
			<fieldset name="advanced">
				<field
					name="cache"
					type="radio"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC" >
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>